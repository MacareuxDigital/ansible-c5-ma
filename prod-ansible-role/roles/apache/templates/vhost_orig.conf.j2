<VirtualHost *:80>
  ServerName {{ vhost_domain }}
  ServerAlias www.{{ vhost_domain }}

  DirectoryIndex index.php index.html

  CustomLog /var/log/httpd/{{ vhost_domain }}-access_log combined
  ErrorLog  /var/log/httpd/{{ vhost_domain }}-error_log

  DocumentRoot {{ vhost_docroot }}{{ vhost_domain }}

  <FilesMatch \.php$>
    SetHandler "proxy:unix:/var/run/php-fpm/www.sock|fcgi://localhost/"
  </FilesMatch>

  <Directory "{{ vhost_docroot }}{{ vhost_domain }}">
    AllowOverride All
    Options FollowSymLinks
    Options -Indexes
    Require all granted
  </Directory>
</VirtualHost>
